<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".MainActivity"><com.lhj.scrollerdemo.VerticalScrollerView    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical"        android:focusableInTouchMode="true">        <TextView            android:layout_width="match_parent"            android:layout_height="100dp"            android:gravity="center"            android:text="this is top view"/>        <com.lhj.scrollerdemo.VerticalScrollerView            android:id="@+id/scrollView_v"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="#f2f2f2">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:descendantFocusability="blocksDescendants">                <TextView                    android:id="@+id/tex_group_name"                    android:layout_width="80dp"                    android:layout_height="50dp"                    android:text="股票名称"                    android:gravity="center"/>                <android.support.v7.widget.RecyclerView                    android:id="@+id/rv_name"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@id/tex_group_name"/>                <com.lhj.scrollerdemo.HorizontalScrollView                    android:id="@+id/scrollview_h"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:scrollbars="none"                    android:layout_marginLeft="80dp">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:orientation="vertical">                        <include layout="@layout/layout_stockdata_head"/>                        <android.support.v7.widget.RecyclerView                            android:id="@+id/rv_data"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"/>                    </LinearLayout>                </com.lhj.scrollerdemo.HorizontalScrollView>            </RelativeLayout>        </com.lhj.scrollerdemo.VerticalScrollerView>    </LinearLayout></com.lhj.scrollerdemo.VerticalScrollerView></RelativeLayout>