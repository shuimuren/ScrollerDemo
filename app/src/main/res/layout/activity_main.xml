<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".MainActivity">    <TextView        android:id="@+id/tvTest"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:padding="30dp"        android:text="tvTest"/><com.lhj.scrollerdemo.VerticalScrollerView    android:id="@+id/scView"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_below="@id/tvTest">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical"        android:focusableInTouchMode="true">        <com.lhj.scrollerdemo.VerticalScrollerView            android:id="@+id/scrollView_v"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="#f2f2f2">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:descendantFocusability="blocksDescendants">                <TextView                    android:id="@+id/tex_group_name"                    android:layout_width="80dp"                    android:layout_height="50dp"                    android:text="股票名称"                    android:gravity="center"/>                <android.support.v7.widget.RecyclerView                    android:id="@+id/rv_name"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@id/tex_group_name"/>                <com.lhj.scrollerdemo.HorizontalScrollView                    android:id="@+id/scrollview_h"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:scrollbars="none"                    android:layout_marginLeft="80dp">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:orientation="vertical">                        <include layout="@layout/layout_stockdata_head"/>                        <android.support.v7.widget.RecyclerView                            android:id="@+id/rv_data"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"/>                    </LinearLayout>                </com.lhj.scrollerdemo.HorizontalScrollView>            </RelativeLayout>        </com.lhj.scrollerdemo.VerticalScrollerView>    </LinearLayout></com.lhj.scrollerdemo.VerticalScrollerView><HorizontalScrollView    android:id="@+id/ll_tabtopview"    android:layout_width="wrap_content"    android:layout_height="50dp"    android:visibility="gone"    android:clipChildren="false"    android:gravity="center"    android:scrollbars="none"    android:layout_below="@id/tvTest"    android:background="#ff6666">    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:orientation="horizontal">        <TextView            android:id="@+id/top_tex_group_name"            android:layout_width="80dp"            android:layout_height="50dp"            android:text="股票名称"            android:gravity="center"            android:background="#000000"/>        <include android:id="@+id/top_data_view"            layout="@layout/layout_stockdata_head"            android:layout_width="match_parent"            android:layout_height="match_parent"/>    </LinearLayout></HorizontalScrollView></RelativeLayout>