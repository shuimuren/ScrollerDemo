<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="50dp"    android:orientation="horizontal">    <TextView        android:layout_width="80dp"        android:layout_height="match_parent"        android:gravity="center"        android:text="最新"/>    <TextView        android:layout_width="80dp"        android:layout_height="match_parent"        android:gravity="center"        android:text="涨幅"/>    <TextView        android:layout_width="80dp"        android:layout_height="match_parent"        android:gravity="center"        android:text="涨跌"/>    <TextView        android:layout_width="80dp"        android:layout_height="match_parent"        android:gravity="center"        android:text="大单净率"/>    <TextView    android:layout_width="80dp"    android:layout_height="match_parent"    android:gravity="center"    android:text="还手"/>    <TextView    android:layout_width="80dp"    android:layout_height="match_parent"    android:gravity="center"    android:text="量比"/>    <TextView    android:layout_width="80dp"    android:layout_height="match_parent"    android:gravity="center"    android:text="现手"/>    <TextView    android:layout_width="80dp"    android:layout_height="match_parent"    android:gravity="center"    android:text="开盘"/></LinearLayout>